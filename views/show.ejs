<% include ./partials/header.ejs%>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-40">
                <div class=" w-full h-52 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-1 text-lg"> <%= elem.title %> </h5>
                <h5 class="mt-1 text-xs"> <%= elem.description %> </h5>
    
            </div>
            
        <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs%>