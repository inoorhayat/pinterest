<% include ./partials/header.ejs%>
  <div class="w-full bg-center bg-auto bg-[url('https://images.unsplash.com/photo-1651129926049-d4f0b587ce93?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
    <div class="w-[60vh]  bg-white px-12 py-10 rounded-3xl bg">
      <img class="w-16 mx-auto pt-5" src="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/pinterest-round-color-icon.png" >
      <h1 class="text-3xl pt-4 leading-none tracking-tight font-semibold text-zinc-700 text-center">Welcome to Pinterest </h1>
      <p class="text-center pb-2">Find new ideas to try</p>
      <form action="/register" method="post">
          <label for="email" class="inline-block mb-[0] text-sm font-medium text-gray-900">email</label>
          <input class="border-2 rounded-md w-full px-3 py-2 mt-0 mb-2" type="email" name="email" id="email" placeholder="email">
        <label for="username" class="inline-block mb-[0] text-sm font-medium text-gray-900">username</label>
        <input class="border-2 rounded-md w-full px-3 py-2 mt-0 mb-2" type="text" name="username" id="username" placeholder="username">
        <label for="fullname" class="inline-block mb-[0] text-sm font-medium text-gray-900">fullname</label>
        <input class="border-2 rounded-md w-full px-3 py-2 mt-0 mb-2" type="text" name="fullname" id="fullname" placeholder="fullname">
        <label for="password" class=" text-sm font-medium text-gray-900">password</label>
        <input class="border-2 rounded-md w-full px-3 py-2 mt-0" type="password" name="password" id="password" placeholder="password">
        <label for="date" class=" text-sm font-medium text-gray-900">date of birth</label>
        <input class="border-2 rounded-md w-full px-3 py-2 mt-0 mb-2" type="date" name="date" id="date" placeholder="date-of birth">
        <input class="border-2  w-full px-3 py-2 mt-2 bg-red-600 hover:bg-red-700 transition duration-300 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-600 mt-6 w-5/6 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read our Privacy Policy; Notice at collection</p>
      </form>
      <a href="/" class="inline-block mt-7 font-semibold text-zinc-700 text-center w-full">Already a member? Log in</a>
    </div>
  </div>
<% include ./partials/footer.ejs%>